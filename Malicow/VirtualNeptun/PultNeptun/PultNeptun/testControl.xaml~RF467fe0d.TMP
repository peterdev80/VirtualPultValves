<UserControl x:Class="PultNeptun.testControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            
              xmlns:pc="clr-namespace:VirtualPultValves.PultControl;assembly=VirtualPultValves"
             xmlns:my="clr-namespace:VirtualPultValves;assembly=VirtualPultValves"
             xmlns:mv="clr-namespace:VirtualPultValves.Views;assembly=VirtualPultValves"       
             xmlns:avm="clr-namespace:VirtualPultValves.ViewModel;assembly=VirtualPultValves"
             xmlns:local="clr-namespace:PultNeptun"
             mc:Ignorable="d" 
             Width="1920" Height="1080" Background="#FFA6A4A4">
    <pc:PanelInpu TypePanel="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="405*"/>
                <ColumnDefinition Width="547*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="611*"/>
                <RowDefinition Height="394*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.RowSpan="3" Grid.ColumnSpan="3" Stretch="Fill">
                <Canvas Background="#FFDD2727" Height="1046" Width="1920">
                    <Border BorderBrush="Black" BorderThickness="1" Height="619" Canvas.Left="24" Canvas.Top="40" Width="801.8" Background="#FF0FF364"/>
                </Canvas>

            </Viewbox>

            <pc:PanelInpu Grid.Column="1" Grid.Row="1">
                <Grid>
                    <ContentControl x:Name="WinPult" Content="{Binding ''}"  Background="#FFE73737" BorderBrush="#FFD03131"   Margin="0,0,-0.001,0"   />
                    <Border BorderBrush="Black" BorderThickness="0" Background="#FFC2C2C2">
                        <Border.LayoutTransform>
                            <TransformGroup>
                                <ScaleTransform CenterX="0.15"/>
                                <SkewTransform CenterX="0.15"/>
                                <RotateTransform CenterX="0.15"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Border.LayoutTransform>
                        <Border BorderBrush="#FFA19F9F" BorderThickness="1" Background="#FFB8B7B7" Visibility="Hidden" />
                    </Border>
                </Grid>
            </pc:PanelInpu>

        </Grid>
    </pc:PanelInpu>
</UserControl>
